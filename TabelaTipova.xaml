<Window x:Class="HCI.TabelaTipova"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HCI"
        mc:Ignorable="d"
        Title="TabelaTipova" Height="430" Width="750" Background="LightSteelBlue" ResizeMode="NoResize" Icon="icon-power-plant-home.ico">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="300"/>
            <RowDefinition Height="101" />
        </Grid.RowDefinitions>

        <Border Grid.RowSpan="3" Grid.Row="0" BorderBrush="Gray" BorderThickness="1">

        </Border>

        <DataGrid Name="dataGridTipovi" Grid.Row="0" Loaded="dataGridTipovi_Loaded" MouseEnter="dataGridTipovi_MouseEnter" AutoGenerateColumns="True" IsReadOnly="True"/>
        
        <Button Name="TTbtnIzmena" Click="TTbtnIzmena_Click" Grid.Row="1" VerticalAlignment="Center" Margin="264,32,377,32"  FontSize="16" Height="35">Izmeni</Button>
        <Button Name="TTbtnObrisi" Click="TTbtnObrisi_Click" Grid.Row="1" VerticalAlignment="Center" Margin="389,32,252,32"  FontSize="16" Height="35">Obrisi</Button>

    </Grid>
</Window>
